<body class="body" id="body">

<!---------------------------------
--------------Header------------ -->
<header class="header" id="header">
    <div class="header-container" ng-controller="MainCtrl">
        <div class="columns twelve">
            <div class="logo">
                <a href="/"><span class="pink">Circo</span><span class="lightblack">viral</span></a>
            </div>
            <nav class="nav-collapse">
                <ul>
                    <li ng-repeat="category in categories">
                        <a href="/category/{[{category.key}]}">
                            <div class="nav-indicator"
                                 style="background-color:{[{category.color}]}"></div>
                            <div>{[{category.name}]}</div>
                        </a>
                    </li>
                </ul>
                <div class="like-us-button">
                    <iframe src="//www.facebook.com/plugins/like.php?href=https%3A%2F%2Ffacebook.com%2Fcircoviral&amp;width=147&amp;layout=button_count&amp;action=like&amp;show_faces=true&amp;share=false&amp;height=21&amp;appId=674350519339283"
                            scrolling="no" frameborder="0"
                            style="border:none; overflow:hidden; width:147px; height:21px;vertical-align:middle;"
                            allowTransparency="true"></iframe>
                </div>
            </nav>
        </div>
    </div>
</header>
<!---------------------------------
------------//Header-------------->

<!---------------------------------
--------------Main Content------ -->
<section id="main-content" class="main-content clearfix">
    <div class="container">
        <div ng-view></div>
        <!-- main article content     -->
    </div>

</section>
<!---------------------------------
------------//Main Content------ -->


